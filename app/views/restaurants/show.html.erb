<div class="container">
  <div class="mt-3">
    <h2><%= @restaurant.name %></h2>
    <p><%= @restaurant.address %></p>
    <p class="border rounded"><%= @restaurant.category %></p>
    <% @restaurant.reviews.each do |review| %>
        <p>rating : <%= review.rating%></p>
        <p class="border-bottom">comment : <%= review.content%></p>
    <% end %>
  </div>
    <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
    <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-primary" %>



</div>
